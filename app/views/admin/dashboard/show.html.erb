<section class="admin-dashboard">

  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="row">
    
    <div class="col-sm-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title">Total Products</h4>
          <p class="card-text"><%= @products %></p>
          <%= link_to 'View Products', [:admin, :products], class: 'btn btn-info' %>
          <div style="padding-top: 1rem">
            <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title">Total Categories</h4>
          <p class="card-text"><%= @categories %></p>
          <%= link_to 'View Categories', [:admin, :categories], class: 'btn   btn-info' %>
          <div style="padding-top: 1rem">
            <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn  btn-info' %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div>
    <%= link_to 'View Home Page', root_path, class: 'btn btn-md btn-info' %>
  </div>

</section>